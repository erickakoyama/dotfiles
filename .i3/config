#exec terminator -T "dir-watcher" -e cd Liferay/dir-watch && gulp watch
#exec terminator -T "loop-portlet" -e cd Liferay/ee-plugins/portlets/loop-portlet
exec google-chrome --force-device-scale-factor=1.2 --new-window https://liferayeng.slack.com/messages/build/
exec xautolock -locker py3lock.py